# =================================
# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ БОТА
# =================================

BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
SUPPORT_USERNAME=your_support_username
DATABASE_PATH=database/tournaments.db
LOG_LEVEL=INFO
TIMEZONE_DEFAULT=Asia/Bishkek

# =================================
# НАСТРОЙКИ CHALLONGE API
# =================================

# Получить API ключ: https://challonge.com/settings/developer
CHALLONGE_API_KEY=your_challonge_api_key_here
CHALLONGE_USERNAME=your_challonge_username

# =================================
# ИНСТРУКЦИЯ ПО ПОЛУЧЕНИЮ API КЛЮЧА
# =================================

# 1. Зайдите на https://challonge.com
# 2. Зарегистрируйтесь или войдите в аккаунт  
# 3. Перейдите в Settings -> Developer API
# 4. Скопируйте ваш API Key
# 5. Вставьте его в CHALLONGE_API_KEY
# 6. Укажите ваш username в CHALLONGE_USERNAME

# Пример готовых настроек:
# CHALLONGE_API_KEY=abc123def456ghi789
# CHALLONGE_USERNAME=enas_tournaments